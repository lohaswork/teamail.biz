<div class="row checkbox-group" id="select-user" data-update="#selected_users", data-page="CheckBoxGroup", data-reload=true>
  <%- if !colleagues.blank?%>
    <div class='col-xs-2'>
      <input type="checkbox", class='all', data-all=true>
      <span>全选</span>
    </div>
    <div class="col-xs-10" >
      <%- show_for_checkbox(colleagues, topic).each do |user| %>
          <%= check_box_tag nil, user[:email], false, :class=>"item", :'data-item'=>true, :'data-selected'=>user[:is_in_topic] %>
          <span><%=user[:email_name]%></span>
      <% end %>
    </div>
  <% end %>
</div>
