<div class="sidebar col-xs-2">
  <div data-page="NewTopicPage">
    <button type="button" id="create-new-topic" class="btn btn-default">创建新话题</button>
  </div>
  <hr>
  <div class="personal-inbox">
    <h4>
      <%= link_to('个人空间', personal_topics_path) %>
    </h4>
    <h5>
      <%= link_to personal_topics_inbox_path do %>
        未处理
        <span class="badge"><%= unread_topic_number.to_s %></span>
      <%end %>
    </h5>
    <h5>
      <%= link_to('所有', personal_topics_path) %>
    </h5>
  </div>
  <hr>
  <div class="organization-inbox">
    <h4>
      <%= link_to("团队空间", organization_topics_path)%>
    </h4>
    <%= render :partial => 'tags/tag_filters', :locals => { :tags => current_organization.tags } %>
  </div>
</div>
