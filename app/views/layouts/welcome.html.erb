<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "TeaMail.biz" %></title>
    <meta name="keywords" content="TeaMail 团队协作 项目管理 SaaS">
    <meta name="description" content="TeaMail是为中小团队定制的团队协作和项目管理工具">
    <meta name="author" content="LohasWork">
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <link href="http://vjs.zencdn.net/4.1/video-js.css" rel="stylesheet">
    <!--[if lt IE 8]>
        <%= stylesheet_link_tag "ie/font-awesome-ie7.min.css", media: "all" %>
    <![endif]-->
    <!--[if IE]>
        <%= stylesheet_link_tag "ie/ie.css", media: "all" %>
    <![endif]-->
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %>" data-page="<%= @page_id %>">
    <div class="modal fade" id="top-message-container"></div>
    <div class="modal fade" id="myModal"></div>
    <div class='wrapper'>
      <%= yield %>
      <%= render 'layouts/footer_index' %>
    </div>
    <%= javascript_include_tag "application" %>
    <%= javascript_tag '$.fx.off = true;' if Rails.env.test? %>
    <script src="http://vjs.zencdn.net/4.1/video.js"></script>
    <!--[if lt IE 9]>
        <%= javascript_include_tag "ie" %>
    <![endif]-->
  </body>
</html>
