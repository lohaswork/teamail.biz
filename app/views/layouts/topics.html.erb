<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= content_for?(:title) ? yield(:title) : "teamail.biz | Teamwork with Email." %></title>
    <meta name="keywords" content="teamail 团队协作 项目管理 SaaS">
    <meta name="description" content="teamail.biz是为中小团队定制的团队协作和项目管理工具">
    <meta name="author" content="LohasWork">
    <%= favicon_link_tag 'favicon.ico' %>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <!--[if lt IE 8]>
    <%= stylesheet_link_tag "ie/font-awesome-ie7.min.css", media: "all" %>
    <![endif]-->
    <!--[if IE]>
        <%= stylesheet_link_tag "ie/ie.css", media: "all" %>
    <![endif]-->
    <!--[if lt IE 9]>
      <%= javascript_include_tag "ie" %>
    <![endif]-->
    <%= javascript_include_tag "google-analytics" if Rails.env.production? %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %>" data-page="<%= @page_id %>">
    <div id='myModal' class='modal fade'>
      <%= render :partial => 'shared/new_topic' %>
    </div>
    <div class="modal fade" id="top-message-container"></div>
    <%= render 'layouts/navigation' %>
    <div class='container'>
      <%= render 'shared/flash_notice' %>
      <div class='page-container row'>
        <%= render 'shared/sidebar'%>
        <section class="major-content col-xs-10">
          <%= yield %>
        </section>
      </div>
    </div>
    <%= render 'layouts/footer' %>
    <%= javascript_include_tag "application" %>
    <%= javascript_tag '$.fx.off = true;' if Rails.env.test? %>
    <!--[if lt IE 10]>
      <%= javascript_include_tag "placeholder" %>
    <![endif]-->
  </body>
</html>
