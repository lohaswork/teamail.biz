<span id="attachments-in-discussion">
  <ul class="list-unstyled">
    <%- discussion.upload_files.try(:each) do |file| %>
      <li>
        <i class="fa fa-paperclip fa-lg"></i>
        <%= file.name %>
        <%= link_to('下载', files_download_path(id: file.id), method: :get) %>
        <!--
        <%= link_to('删除', files_delete_path(id: file.id), method: :delete, remote: true) %>
        -->
      </li>
    <% end %>
  </ul>
</span>

