<span id="attachments-in-discussion">
  <ul class="list-unstyled">
    <%- discussion.upload_files.try(:each) do |file| %>
      <li>
        <i class="fa fa-paperclip fa-lg"></i>
        <%= file.name %>
        <%= file.size ? number_to_human_size(file.size) : "未知大小" %>
        <a href="<%= file.file.url%>" title="<%= file.name%>" rel="attachments" download="<%= file.name%>">下载</a>
      </li>
    <% end %>
  </ul>
</span>

