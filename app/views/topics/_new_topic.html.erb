<div class="row" data-page="NewTopicPage">
  <%- if current_organization %>
    <div id='new-topic'>
      <div class="new-topic-line">
        <%= link_to('创建新话题', '#', :id => 'new-topic-button', :class=>"btn offset6")%>
      </div>
      <div id='new-topic-form', class="row">
        <%= form_tag topics_path, :method => "post", :class=>"form-horizontal", :remote => true do %>
          <div class="form-group">
            <label for="inputTitle" class="col-md-1 control-label">标题</label>
            <div class="col-md-6">
              <%= text_field_tag :title, nil, :class=>"form-control", :placeholder=>"标题"%>
            </div>
          </div>
          <div class="form-group">
            <label for="inputContent" class="col-md-1 control-label">内容</label>
            <div class="col-md-6">
              <%= text_area_tag :content, nil, :class=>"form-control form-content", :rows=>"3", :placeholder=>"内容"%>
            </div>
          </div>
          <%= hidden_field_tag :selected_users, '' %>
          <div>
            <%= submit_tag "创建", :class=>"btn"%>
          </div>
          <div>
            <%= link_to('取消', '#', :id => 'cancel-create-button', :class=>"btn")%>
          </div>
        <% end %>
        <%= render :partial=> 'topics/user_select', :locals => {:colleagues => get_colleagues, :topic => nil} %>
      </div>
    </div>
  <%- end %>
</div>
